<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="view_purchase_order_tech_inherit" model="ir.ui.view">
                        <field name="name">tech.purchase.form.inherit</field>
                        <field name="model">purchase.order</field>
                        <field name="inherit_id" ref="purchase.purchase_order_form"/>
                        <field name="arch" type="xml">
                                <xpath expr="//button[@name='action_rfq_send']" position="after">
                                  <button name="print_purchase" string="Lettre de consultation" type="object" class="oe_highlight" states="draft"/>
                                </xpath>
                                <xpath expr="//button[@name='print_quotation']" position="attributes">
                                  <attribute name="invisible">1</attribute>
                                </xpath>
                                 <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                                        <field name="article_number" invisible="1"/>
                                </xpath>
                                <xpath expr="//button[@name='print_purchase']" position="after">
                                  <button name="print_b_cmd" string="Bon de commande" type="object" class="oe_highlight" states="purchase"/>
                                </xpath>
                                
                        </field>
        </record>

            <template id="internal_layout_header_inherit" inherit_id="web.internal_layout">
                <xpath expr="//div[@class='header']" position="replace">
                    <div class="header">
                        <div class="row">
                            <div class="col-3" style="vertical-align:center">
                            <small>Royaume du Maroc
                            <br><strong>ECOLE NATIONALE SUPPERIEUR</strong></br>
                            <br><strong>DES MINES DE RABAT</strong></br></small>
                            </div>
                        </div>
                    </div>
                </xpath>
            </template>

